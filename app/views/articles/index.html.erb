<h1>Articles</h1>
<h2><%= link_to "Create new ✏️", new_article_path %></h2>
<% Article.all.each do |article|%>
<p><%= link_to article.title, article_path(article) %> - <%= link_to '✏️', edit_article_path(article) %> / <%= link_to '🗑️', article_path(article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' }  %></p>
<% end %>
